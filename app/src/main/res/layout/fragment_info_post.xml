<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Enterprise.fragements.candidateForAJob.InfoPostFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fragment InfoPostFragment pour mettre qqls infos Ã  propos du current post" />
        <TextView
            android:id="@+id/jobTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Job name" />
        <TextView
            android:id="@+id/postDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Posted X times ago" />
        <TextView
            android:id="@+id/currentState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="State" />
        <TextView
            android:id="@+id/nbApplicants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Number of applications waiting" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fin Fragment InfoPostFragment" />
    </LinearLayout>
</FrameLayout>